#!/bin/bash

# BACKUP
# ===========================================================================
# Title: backup file
# Author: [shendy-pratama] <shendypratamaa@gmail.com>
# Findme: [https://github.com/shendypratamaa]
# ===========================================================================
# OS: MacOS Ventura 13.1
# ===========================================================================

FILEDIR="$HOME/Documents/data"
GENFILES=$(date "+%F")
BAKDIR="$HOME/Documents/$GENFILES"
BAKSTORE="$HOME/.dotfiles/docs/Documents/data"

if [ -d "$FILEDIR" ]; then
	mkdir -v "$BAKDIR" &&
		cp -r "$FILEDIR" "$BAKDIR" &&
		tar -cvf "$BAKDIR.tar.gz" "$BAKDIR" &&
		[ -d "$BAKSTORE" ] && mv "$BAKDIR.tar.gz" "$BAKSTORE"
	osascript -e 'display notification "Backup Complete ðŸŒ¸, Dont forget to encryption!" with title "Backup Notification"'
	rm -rf "$BAKDIR"
else
	echo "woops, Directory not found !"
fi
