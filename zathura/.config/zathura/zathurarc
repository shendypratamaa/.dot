### Settings from original zathurarc ###
set font "JetBrains Mono 10"
set scroll-page-aware true
set scroll-step 50
set render-loading false
set adjust-open best-fit
set scroll-full-overlap 0.01
set page-padding 1
set pages-per-row 1
set scroll-full-overlap 0.01
set statusbar-h-padding 0
set statusbar-v-padding 0
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map p print

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#a3bac6'
set completion-bg '#09080E'

# Command line completion group elements
set completion-group-fg '#313895'
set completion-group-bg '#09080E'

# Current command line completion element
set completion-highlight-fg '#09080E'
set completion-highlight-bg '#a3bac6'

# Default foreground/background color
set default-bg rgba(9,8,14,1)

# Input bar
set inputbar-fg '#a3bac6'
set inputbar-bg '#09080E'

# Notification
set notification-fg '#a3bac6'
set notification-bg '#09080E'

# Error notification
set notification-error-fg '#a3bac6'
set notification-error-bg '#255371'

# Warning notification
set notification-warning-fg '#a3bac6'
set notification-warning-bg '#255371'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#a3bac6'
set statusbar-bg '#09080E'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#313895'
set highlight-active-color '#313895'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#a3bac6'

# 'Loading...' text
set render-loading-fg '#a3bac6'
set render-loading-bg '#09080E'

# Index mode
set index-fg '#a3bac6'
set index-bg '#09080E'

# Selected element in index mode
set index-active-fg '#09080E'
set index-active-bg '#a3bac6'