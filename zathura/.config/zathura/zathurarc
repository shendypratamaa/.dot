### Settings from original zathurarc ###
set font "JetBrains Mono 10"
set scroll-page-aware true
set scroll-step 50
set render-loading false
set adjust-open best-fit
set scroll-full-overlap 0.01
set page-padding 1
set pages-per-row 1
set scroll-full-overlap 0.01
set statusbar-h-padding 0
set statusbar-v-padding 0
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map p print

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#d4d9db'
set completion-bg '#0F0A0D'

# Command line completion group elements
set completion-group-fg '#ce906d'
set completion-group-bg '#0F0A0D'

# Current command line completion element
set completion-highlight-fg '#0F0A0D'
set completion-highlight-bg '#d4d9db'

# Default foreground/background color
set default-bg rgba(15,10,13,1)

# Input bar
set inputbar-fg '#d4d9db'
set inputbar-bg '#0F0A0D'

# Notification
set notification-fg '#d4d9db'
set notification-bg '#0F0A0D'

# Error notification
set notification-error-fg '#d4d9db'
set notification-error-bg '#c88f5c'

# Warning notification
set notification-warning-fg '#d4d9db'
set notification-warning-bg '#c88f5c'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#d4d9db'
set statusbar-bg '#0F0A0D'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#ce906d'
set highlight-active-color '#ce906d'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#d4d9db'

# 'Loading...' text
set render-loading-fg '#d4d9db'
set render-loading-bg '#0F0A0D'

# Index mode
set index-fg '#d4d9db'
set index-bg '#0F0A0D'

# Selected element in index mode
set index-active-fg '#0F0A0D'
set index-active-bg '#d4d9db'