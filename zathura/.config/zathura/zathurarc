### Settings from original zathurarc ###
set font "JetBrains Mono 10"
set scroll-page-aware true
set scroll-step 50
set render-loading false
set adjust-open best-fit
set scroll-full-overlap 0.01
set page-padding 1
set pages-per-row 1
set scroll-full-overlap 0.01
set statusbar-h-padding 0
set statusbar-v-padding 0
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map p print

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#9bc69a'
set completion-bg '#040503'

# Command line completion group elements
set completion-group-fg '#1a3b4f'
set completion-group-bg '#040503'

# Current command line completion element
set completion-highlight-fg '#040503'
set completion-highlight-bg '#9bc69a'

# Default foreground/background color
set default-bg rgba(4,5,3,1)

# Input bar
set inputbar-fg '#9bc69a'
set inputbar-bg '#040503'

# Notification
set notification-fg '#9bc69a'
set notification-bg '#040503'

# Error notification
set notification-error-fg '#9bc69a'
set notification-error-bg '#183b48'

# Warning notification
set notification-warning-fg '#9bc69a'
set notification-warning-bg '#183b48'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#9bc69a'
set statusbar-bg '#040503'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#1a3b4f'
set highlight-active-color '#1a3b4f'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#9bc69a'

# 'Loading...' text
set render-loading-fg '#9bc69a'
set render-loading-bg '#040503'

# Index mode
set index-fg '#9bc69a'
set index-bg '#040503'

# Selected element in index mode
set index-active-fg '#040503'
set index-active-bg '#9bc69a'