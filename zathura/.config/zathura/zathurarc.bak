### Settings from original zathurarc ###
set font "JetBrains Mono 10"
set scroll-page-aware true
set scroll-step 50
set render-loading false
set adjust-open best-fit
set scroll-full-overlap 0.01
set page-padding 1
set pages-per-row 1
set scroll-full-overlap 0.01
set statusbar-h-padding 0
set statusbar-v-padding 0
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map p print

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#cce1df'
set completion-bg '#050F16'

# Command line completion group elements
set completion-group-fg '#336d9c'
set completion-group-bg '#050F16'

# Current command line completion element
set completion-highlight-fg '#050F16'
set completion-highlight-bg '#cce1df'

# Default foreground/background color
set default-bg rgba(5,15,22,1)

# Input bar
set inputbar-fg '#cce1df'
set inputbar-bg '#050F16'

# Notification
set notification-fg '#cce1df'
set notification-bg '#050F16'

# Error notification
set notification-error-fg '#cce1df'
set notification-error-bg '#37a799'

# Warning notification
set notification-warning-fg '#cce1df'
set notification-warning-bg '#37a799'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#cce1df'
set statusbar-bg '#050F16'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#336d9c'
set highlight-active-color '#336d9c'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#cce1df'

# 'Loading...' text
set render-loading-fg '#cce1df'
set render-loading-bg '#050F16'

# Index mode
set index-fg '#cce1df'
set index-bg '#050F16'

# Selected element in index mode
set index-active-fg '#050F16'
set index-active-bg '#cce1df'