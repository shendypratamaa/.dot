### Settings from original zathurarc ###
set font "JetBrains Mono 10"
set scroll-page-aware true
set scroll-step 50
set render-loading false
set adjust-open best-fit
set scroll-full-overlap 0.01
set page-padding 1
set pages-per-row 1
set scroll-full-overlap 0.01
set statusbar-h-padding 0
set statusbar-v-padding 0
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map p print

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#c5eef5'
set completion-bg '#051324'

# Command line completion group elements
set completion-group-fg '#3987ab'
set completion-group-bg '#051324'

# Current command line completion element
set completion-highlight-fg '#051324'
set completion-highlight-bg '#c5eef5'

# Default foreground/background color
set default-bg rgba(5,19,36,1)

# Input bar
set inputbar-fg '#c5eef5'
set inputbar-bg '#051324'

# Notification
set notification-fg '#c5eef5'
set notification-bg '#051324'

# Error notification
set notification-error-fg '#c5eef5'
set notification-error-bg '#367fa2'

# Warning notification
set notification-warning-fg '#c5eef5'
set notification-warning-bg '#367fa2'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#c5eef5'
set statusbar-bg '#051324'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#3987ab'
set highlight-active-color '#3987ab'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#c5eef5'

# 'Loading...' text
set render-loading-fg '#c5eef5'
set render-loading-bg '#051324'

# Index mode
set index-fg '#c5eef5'
set index-bg '#051324'

# Selected element in index mode
set index-active-fg '#051324'
set index-active-bg '#c5eef5'